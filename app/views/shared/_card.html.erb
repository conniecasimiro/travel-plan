<div class="card-square">
  <div class="square-1">
    <div class="card-square-img">
      <%= cl_image_tag photo, height: 300, width: 300, class:"d-block w-100", style:"object-fit: cover" %>
      </div>
      <div class="avatar-end">
          <% if userphoto.present? %>
            <%= cl_image_tag userphoto, class: "avatar-card"%>
          <% end %>
          <%# <%= image_tag userphoto, class: "avatar-card"%>
      </div>
    </div>

  <div class="card-square-infos">
    <div class="square-2">
      <h5><%= title %></h5>
      <ul>
        <% tags.each do |tag| %>
          <li class="tag">
          <% case tag.title %>
            <% when "Hiking" %>
              <i class="fa-solid fa-person-hiking fa-fw circle-icon"></i>
            <% when "Mountains" %>
              <i class="fa-solid fa-mountain fa-fw circle-icon"></i>
            <% when "City" %>
              <i class="fa-solid fa-city fa-fw circle-icon"></i>
            <% when "Jungle" %>
              <i class="fa-solid fa-leaf fa-fw circle-icon"></i>
            <% when "Beach" %>
              <i class="fa-solid fa-umbrella-beach fa-fw circle-icon"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="days">
      <p id="duration"> <%= duration %> days </p>
    </div>
    <div class="square-3" >
       <div class="likes" data-controller="likes" data-likes-target="likes">
          <button class="like-button-index" data-likes-target="like" data-action ="click->likes#update"><i class="fa-solid fa-heart"></i></button>
        <div class="likes-counter-index" data-likes-target="counter"><%= likes %></div>
          <div class="d-none">
            <%= simple_form_for :likes, data: {likes_target: "form"} do |f| %>
              <%= f.input :likes, input_html: {value: likes += 1}  %>
              <%= f.submit %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
