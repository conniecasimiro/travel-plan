<div id="container-flex" data-controller="add-method">
  <div class="container-width" id="bg-blue">
    <%= link_to trips_path(@trip) do %>
    <div style="color:black;" class="fa-solid fa-delete-left"> </div>
    <% end %>
    <h1>Step one</h1>
      <%= simple_form_for(@trip) do |f| %>
        <%# <%= f.input :start_date, as: :date, html5: true%>
        <%= f.input :title, label: "Title", hint: 'Example: "My Euro Travels"', required: false, label_html: { class:"simple-form-style" }%>
        <%= f.input :description, label: "Description", hint: "Please be as descriptive as possible", required: false, label_html: { class:"simple-form-style" }%>
        <%= f.input :duration, label: "Duration", hint: "How many days was your trip?", required: false, as: :integer, label_html: { class:"simple-form-style" } %>
        <%= f.input :location, label: "Area", hint: 'Examples: "South America", "Europe", "UK', required: false, label_html: { class:"simple-form-style" }%>
        <p class="simple-form-style">Trip tags</p>
        <div class="check-boxes">
          <%=f.collection_check_boxes :tag_ids, Tag.all, :id, :title, label_html: { class:"simple-form-style" } %>
        </div>
        <%= f.submit 'Continue', class: "btn btn-flat mb-4"%>
      <% end %>
  </div>
  <div class="container-width" id="bg-light-blue">
    <h1>Create your trip</h1>
    <h2>Firstly we need the trip's overview</h2>
    <div class="create-flex">
      <i class="fa-solid fa-circle" id="grey-icon"></i>
      <i class="fa-solid fa-circle"></i>
      <i class="fa-solid fa-circle"></i>
    </div>
    <img src="https://res.cloudinary.com/dblvfwtds/image/upload/v1669814162/image_3_cfsxtc.png">
  </div>
</div>
